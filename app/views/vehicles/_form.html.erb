<%= simple_form_for(@vehicle) do |f| %>
  <%= f.input :marque %>
  <%= f.input :description %>
  <%= f.input :category , collection: @categories, input_html: {class: "form-control input-lg"} %>
  <%= f.input :city %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit class: "btn btn-danger"%>

<% end %>
