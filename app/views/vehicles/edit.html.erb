<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="text-center">
<h1><%= @vehicle.marque%></h1>
<p>Change your vehicle if you are note happy
<i class="fa fa-frown-o" aria-hidden="true"></i></p> 
</div>
<%= simple_form_for(@vehicle) do |f| %>
  <%= f.input :marque %>
  <%= f.input :description %>
  <%= f.input :city %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit class: "btn btn-danger"%>

<% end %>
</div>
</div>
</div>
